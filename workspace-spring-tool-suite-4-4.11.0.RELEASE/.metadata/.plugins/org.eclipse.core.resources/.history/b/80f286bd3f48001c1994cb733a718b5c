package com.dbs.employeemngt.mapper;

import java.io.Serializable;

import java.sql.ResultSet;
import java.sql.SQLException;

import org.springframework.dao.DataAccessException;
import org.springframework.jdbc.core.ResultSetExtractor;
import org.springframework.jdbc.core.RowMapper;

import com.dbs.employeemngt.dto.Employee;

public class EmployeeRowMapper implements ResultSetExtractor<Employee>, RowMapper<Employee>, Serializable{

	@Override
	public Employee extractData(ResultSet rs) throws SQLException,DataAccessException{
		
		Employee employee = new Employee();
		employee.setEmpId(rs.getString("empId"));
		employee.setEmpFn(rs.getString("empFirstName"));
		employee.setEmpLn(rs.getString("empLastName"));
		employee.setEmpSal(rs.getFloat("Salary"));
		employee.setAddress(rs.getString("Address"));
		
		return null;
		
	}

	@Override
	public Employee mapRow(ResultSet rs, int rowNum) throws SQLException {
		// TODO Auto-generated method stub
		return this.extractData(rs);
	}
	
	
}
